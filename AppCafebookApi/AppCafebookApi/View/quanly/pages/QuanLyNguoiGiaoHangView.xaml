<Page x:Class="AppCafebookApi.View.quanly.pages.QuanLyNguoiGiaoHangView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="QuanLyNguoiGiaoHangView" FontFamily="Segoe UI" Background="White" Loaded="Page_Loaded">

    <Page.Resources>
        <SolidColorBrush x:Key="PrimaryBrownBrush" Color="#6F4E37"/>
        <Style TargetType="Button" BasedOn="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="Background" Value="#6F4E37"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="0,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Text="Danh sách Đơn vị Vận chuyển" FontSize="20" FontWeight="Bold" Foreground="{StaticResource PrimaryBrownBrush}" VerticalAlignment="Center"/>
                <Button Content="Làm mới" HorizontalAlignment="Right" Click="BtnRefresh_Click"/>
            </DockPanel>

            <DataGrid Grid.Row="1" x:Name="dgShipper" AutoGenerateColumns="False" CanUserAddRows="False"
                      SelectionMode="Single" SelectionChanged="DgShipper_SelectionChanged" 
                      BorderBrush="#E0E0E0" BorderThickness="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding IdNguoiGiaoHang}" Width="50" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Tên Đơn Vị / Shipper" Binding="{Binding TenNguoiGiaoHang}" Width="*" IsReadOnly="True" FontWeight="SemiBold"/>
                    <DataGridTextColumn Header="SĐT" Binding="{Binding SoDienThoai}" Width="120" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Trạng thái" Binding="{Binding TrangThai}" Width="100" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Border Grid.Column="1" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Padding="15" Background="#FAFAFA">
            <StackPanel>
                <TextBlock Text="Thông tin chi tiết" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" Foreground="{StaticResource PrimaryBrownBrush}"/>

                <TextBlock Text="Tên Đơn vị / Shipper:" FontWeight="SemiBold"/>
                <TextBox x:Name="txtTen" Margin="0,5,0,10" Padding="5"/>

                <TextBlock Text="Số điện thoại:" FontWeight="SemiBold"/>
                <TextBox x:Name="txtSdt" Margin="0,5,0,10" Padding="5"/>

                <TextBlock Text="Trạng thái:" FontWeight="SemiBold"/>
                <ComboBox x:Name="cmbTrangThai" Margin="0,5,0,20" Padding="5">
                    <ComboBoxItem Content="Sẵn sàng" IsSelected="True"/>
                    <ComboBoxItem Content="Tạm ngưng"/>
                </ComboBox>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button x:Name="btnAdd" Content="Thêm" Click="BtnAdd_Click" Background="#4CAF50"/>
                    <Button x:Name="btnEdit" Content="Lưu Sửa" Click="BtnEdit_Click" Background="#2196F3" IsEnabled="False"/>
                    <Button x:Name="btnDelete" Content="Xóa" Click="BtnDelete_Click" Background="#F44336" IsEnabled="False"/>
                </StackPanel>

                <Button Content="Hủy chọn" Click="BtnClear_Click" Background="#9E9E9E" Margin="0,10,0,0" HorizontalAlignment="Center" Width="100"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>