@page "/Account/ThanhToanView"
@model WebCafebookApi.Pages.ThanhToanViewModel
@{
    ViewData["Title"] = "Thanh Toán Đơn Hàng";
    Layout = "_Layout";
}
<div class="container mt-5">
    <div class="main-content-card">
        <h1 class="display-5 fw-bold">Thanh Toán</h1>
        <hr />

        <form method="post">
            <div class="row g-5">
                <div class="col-lg-7">
                    <h4 class="mb-3">Thông tin nhận hàng</h4>

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row g-3">
                        <div class="col-12">
                            <label asp-for="Input.TenNguoiNhan" class="form-label">Họ tên người nhận</label>
                            <input asp-for="Input.TenNguoiNhan" class="form-control" />
                            <span asp-validation-for="Input.TenNguoiNhan" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Input.SoDienThoai" class="form-label">Số điện thoại</label>
                            <input asp-for="Input.SoDienThoai" class="form-control" />
                            <span asp-validation-for="Input.SoDienThoai" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Input.DiaChi" class="form-label">Địa chỉ</label>
                            <input asp-for="Input.DiaChi" class="form-control" />
                            <span asp-validation-for="Input.DiaChi" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Input.GhiChu" class="form-label">Ghi chú (Tùy chọn)</label>
                            <textarea asp-for="Input.GhiChu" class="form-control" rows="3"></textarea>
                        </div>
                    </div>

                    <hr class="my-4">

                    <h4 class="mb-3">Phương thức thanh toán</h4>
                    <div class="my-3">
                        <div class="form-check">
                            <input asp-for="Input.PhuongThucThanhToan" type="radio" value="COD" class="form-check-input" checked />
                            <label class="form-check-label" for="Input_PhuongThucThanhToan">
                                Thanh toán khi nhận hàng (COD)
                            </label>
                        </div>
                        <div class="form-check">
                            <input asp-for="Input.PhuongThucThanhToan" type="radio" value="BankTransfer" class="form-check-input" />
                            <label class="form-check-label" for="Input_PhuongThucThanhToan">
                                Chuyển khoản ngân hàng (Xác nhận sau)
                            </label>
                        </div>
                    </div>
                    <span asp-validation-for="Input.PhuongThucThanhToan" class="text-danger"></span>

                    <hr class="my-4">

                    <button class="w-100 btn btn-primary btn-lg" type="submit">
                        Xác nhận đặt hàng
                        <span class="material-symbols-outlined" style="vertical-align: middle;">check_circle</span>
                    </button>
                </div>

                <div class="col-lg-5">
                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-primary">Đơn hàng của bạn</span>
                        <span class="badge bg-primary rounded-pill">@Model.CheckoutInfo.Items.Count</span>
                    </h4>
                    <ul class="list-group mb-3">
                        @foreach (var item in Model.CheckoutInfo.Items)
                        {
                            <li class="list-group-item d-flex justify-content-between lh-sm">
                                <div>
                                    <h6 class="my-0">@item.TenHienThi</h6>
                                    <small class="text-muted">
                                        @if (item.Loai == "Sach")
                                        {
                                            <span class_text-primary">(Sách - Cọc)</span>
                                        }
                                        else
                                        {
                                            <span>Số lượng: @item.SoLuong</span>
                                        }
                                    </small>
                                </div>
                                <span class="text-muted">@item.ThanhTien.ToString("N0") đ</span>
                            </li>
                        }

                        <li class="list-group-item d-flex justify-content-between bg-light">
                            <div class="text-success">
                                <h6 class="my-0">Phí vận chuyển</h6>
                                <small>(Sẽ được cập nhật sau)</small>
                            </div>
                            <span class="text-success">0 đ</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between fs-5">
                            <span>Tổng cộng</span>
                            <strong>@Model.CheckoutInfo.TongTien.ToString("N0") đ</strong>
                        </li>
                    </ul>
                    <a asp-page="/GioHangView" class="btn btn-link ps-0">
                        <span class="material-symbols-outlined" style="vertical-align: middle;">arrow_back</span>
                        Quay lại giỏ hàng
                    </a>
                </div>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}