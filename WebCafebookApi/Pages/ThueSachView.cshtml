@page "{id:int}"
@model WebCafebookApi.Pages.ThueSachViewModel
@{
    ViewData["Title"] = "Xác Nhận Thuê Sách";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="main-content-card">

                <h1 class="page-title text-center">Xác Nhận Thuê Sách</h1>

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger">@Model.ErrorMessage</div>
                    <a asp-page="/ThuVienSachView" class="btn btn-link">Quay lại thư viện</a>
                    return;
                }

                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                    <div class="alert alert-success">@Model.SuccessMessage</div>
                }
                @if (!string.IsNullOrEmpty(Model.FailureMessage))
                {
                    <div class="alert alert-danger">@Model.FailureMessage</div>
                }

                @if (Model.Sach != null)
                {
                    <div class="card shadow-sm border-0">
                        <div class="row g-0">
                            <div class="col-md-4">
                                @{
                                    var imgSrc = string.IsNullOrEmpty(Model.Sach.AnhBiaUrl) ? "/images/default-book-cover.png" : Model.Sach.AnhBiaUrl;
                                }
                                <img src="@imgSrc" class="img-fluid rounded-start" alt="@Model.Sach.TieuDe" style="width: 100%; height: 300px; object-fit: cover;">
                            </div>
                            <div class="col-md-8 d-flex flex-column">
                                <div class="card-body">
                                    <h5 class="card-title fs-4">@Model.Sach.TieuDe</h5>
                                    <p class="card-text text-muted">
                                        @if (Model.Sach.TacGias.Any())
                                        {
                                            @foreach (var tacgia in Model.Sach.TacGias)
                                            {
                                                <span>@tacgia.TenTacGia</span>
                                            }
                                        }
                                    </p>
                                    <hr />
                                    <dl class="row">
                                        <dt class="col-sm-5">Tiền cọc:</dt>
                                        <dd class="col-sm-7 fs-4 text-danger fw-bold">@Model.Sach.GiaBia.ToString("N0") đ</dd>

                                        <dt class="col-sm-5">Số lượng còn:</dt>
                                        <dd class="col-sm-7">
                                            @if (Model.Sach.SoLuongCoSan > 0)
                                            {
                                                <span class="badge bg-success">Còn sách</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Đã hết</span>
                                            }
                                        </dd>
                                    </dl>

                                    <div class="mt-4">
                                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                                        {
                                            @if (Model.Sach.SoLuongCoSan > 0)
                                            {
                                                <form method="post">
                                                    <button type="submit" class="btn btn-primary btn-lg w-100">
                                                        <i class="bi bi-bag-plus"></i> Xác Nhận Thuê
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <button class="btn btn-secondary btn-lg w-100" disabled>Đã thuê hết</button>
                                            }
                                        }
                                        else
                                        {
                                            <a asp-page="/Account/Login" asp-route-returnUrl="@Request.Path" class="btn btn-outline-primary btn-lg w-100">
                                                <i class="bi bi-box-arrow-in-right"></i> Đăng nhập để thuê
                                            </a>
                                        }
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                }
                else if (string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <p class="text-center">Đang tải thông tin sách...</p>
                }
            </div>
        </div>
    </div>
</div>